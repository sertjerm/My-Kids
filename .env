# ============================
# .env.production - สำหรับ Production Environment
# ============================

# API Configuration
VITE_API_URL=/api

# App Configuration  
VITE_APP_ENV=production
VITE_APP_VERSION=3.1.0
VITE_APP_NAME=MyKids
VITE_APP_DEBUG=false

# ============================
# .env.development - สำหรับ Development Environment
# ============================

# API Configuration (ใช้ production API แต่เปิด debug)
VITE_API_URL=/api

# App Configuration
VITE_APP_ENV=development
VITE_APP_VERSION=3.1.0-dev
VITE_APP_NAME=MyKids Dev
VITE_APP_DEBUG=true

# Debug Options
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_API_LOGGING=true

# ============================
# .env.local - สำหรับ Local Testing (override ค่าข้างต้น)
# ============================

# ถ้าคุณมี API ทดสอบใน localhost
# VITE_API_URL=http://localhost/my-kids-api/api.php

# หรือ ใช้ API จริงแต่เปิด debug เต็ม
VITE_API_URL=https://sertjerm.com/my-kids-api/api.php
VITE_APP_ENV=local
VITE_APP_DEBUG=true
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_API_LOGGING=true