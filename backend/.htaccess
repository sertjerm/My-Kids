# .htaccess for MyKids API v3.0

# Enable Rewrite Engine
RewriteEngine On

# CORS Headers - ให้ PHP จัดการดีกว่า
# Header always set Access-Control-Allow-Origin "*"
# Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
# Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"

# Handle OPTIONS requests properly
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ - [R=200,L]

# API Routing - ส่งทุก request ไปที่ api.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(install\.php|test\.php|debug\.php)$
RewriteRule ^(.*)$ api.php [QSA,L]

# Security Settings
# ป้องกันการเข้าถึงไฟล์ config และ backup
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

<Files "*.backup">
    Order allow,deny
    Deny from all
</Files>

<Files ".env*">
    Order allow,deny
    Deny from all
</Files>

# Allow access to API
<Files "api.php">
    Order allow,deny
    Allow from all
</Files>

# Allow access to installer (ลบออกหลังติดตั้งเสร็จ)
<Files "install.php">
    Order allow,deny
    Allow from all
</Files>

<Files "test.php">
    Order allow,deny
    Allow from all
</Files>

# Character encoding
AddDefaultCharset UTF-8

# Disable directory browsing
Options -Indexes

# Hide server signature
ServerSignature Off

# Prevent access to .htaccess itself
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

# Prevent access to version control files
RedirectMatch 404 /\.git

# Error pages (optional)
# ErrorDocument 404 /my-kids-api/api.php?error=404
# ErrorDocument 500 /my-kids-api/api.php?error=500

# PHP Settings (if allowed)
<IfModule mod_php8.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value max_execution_time 30
    php_value memory_limit 128M
</IfModule>

# Cache control for API responses
<IfModule mod_headers.c>
    # Prevent caching of API responses
    <FilesMatch "\.(php)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>
</IfModule>

# Compression (if supported)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>